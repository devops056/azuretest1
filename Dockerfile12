FROM node:12.2.0-alpine

WORKDIR /app

COPY ./node .
RUN npm install global @nestjs/cli
RUN npm install

EXPOSE 3501

CMD ["npm", "run", "start"]

# install and cache app dependencies

RUN npm install
RUN npm install -g @angular/cli@7.3.9

#add app
COPY . /app 

#serve the app
CMD ["npm", "start", "run"]


# start app
CMD ng serve --host 0.0.0.0
